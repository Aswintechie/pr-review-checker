{
  "name": "pr-approval-server",
  "version": "6.0.0",
  "description": "Backend server for PR Approval Finder",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js",
    "format:check": "prettier --check *.js",
    "code:fix": "npm run lint:fix && npm run format"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.0",
    "express": "^4.21.2",
    "minimatch": "^9.0.3",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "maxWorkers": 1,
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**"
    ]
  },
  "author": "Aswin",
  "license": "MIT"
}
